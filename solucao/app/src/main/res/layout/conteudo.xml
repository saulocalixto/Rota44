<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/conteudo"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/content_main"
        tools:context=".MainActivity">
    <Button
            android:id="@+id/register"
            android:enabled="false"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:layout_gravity="start"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:text="@string/register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/corTexto"
            android:background="@color/corLaranja" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <SearchView
            android:layout_width="395dp"
            android:layout_height="99dp" tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#8CEEE4DA" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="376dp"
            android:layout_height="461dp" card_view:srcCompat="@drawable/mapa"
            android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.719"
            app:layout_constraintHorizontal_bias="0.615"/>
</android.support.constraint.ConstraintLayout>